<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_news_style_2"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/item_padding">

    <TextView
        android:id="@id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_padding"
        android:textSize="@dimen/font_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_img_height"
        android:layout_marginBottom="@dimen/item_padding"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_img_1"
            android:layout_width="0dp"
            android:layout_height="@dimen/item_img_height"
            android:layout_marginRight="@dimen/item_padding"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_img_2"
            android:layout_width="0dp"
            android:layout_height="@dimen/item_img_height"
            android:layout_marginRight="@dimen/item_padding"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_img_3"
            android:layout_width="0dp"
            android:layout_height="@dimen/item_img_height"
            android:layout_weight="1" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_more_small" />

        <TextView
            android:id="@id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/font_more_small" />
    </RelativeLayout>
</LinearLayout>