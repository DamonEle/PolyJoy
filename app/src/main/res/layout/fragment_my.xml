<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <com.damon43.polyjoy.widget.TopWavyView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_margin_size_50dp"
            android:paddingEnd="@dimen/padding_margin_size_15dp"
            android:paddingStart="@dimen/padding_margin_size_15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_today_read"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/todayread"
                    android:textColor="@color/primaryDark"
                    android:textSize="@dimen/font_normal_20sp" />

                <TextView
                    android:id="@+id/tv_all_read"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/allread"
                    android:textColor="@color/primaryDark"
                    android:textSize="@dimen/font_normal_20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_today_read_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="8"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/font_large_40sp" />

                <TextView
                    android:id="@+id/tv_all_read_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="119"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/font_large_40sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/shape_my_record_type_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_by_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/byCount"
            android:textSize="@dimen/font_small_14sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_by_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/byType"
            android:textSize="@dimen/font_small_14sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_by_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/byTime"
            android:textSize="@dimen/font_small_14sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <com.damon43.polyjoy.widget.JoysRecordView
        android:id="@+id/jr_my"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginEnd="@dimen/padding_margin_size_15dp"
        android:layout_marginStart="@dimen/padding_margin_size_15dp" />
</LinearLayout>